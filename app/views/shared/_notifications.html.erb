<div class="dropdown" id="notification-dropdown">
  <span id="notification"><%= @notification.count if (@notification && @notification.count > 0) %></span>
  <i class="fa fa-bell" aria-hidden="true" data-toggle="dropdown"></i>
  <ul class="dropdown-menu dropdown-menu-right navbar-blessme-dropdown-menu">
    <% if @notification && @notification.count > 0 %>
        <% @notification.each do |notification| %>
          <%= link_to user_path(current_user) do %>
            <li>
              <p class="no-prayers"><%= User.find(notification.owner_id).username %>
                  <%= Prayer.find(notification.trackable_id).title %>
              </p>
            </li><hr>
          <% end %>
        <% end %>
    <% else %>
      <p class="no-prayers">Pas de nouvelles pri√®res</p>
    <% end %>
  </ul>
</div>

