  <div class="cards-container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 card-content">
        <a href="#">
          <%= image_tag('voir.webp', class: "image-card") %>
          <span class="card-text"><span>blablabla</span></span>
        </a>
      </div>
      <div class="col-xs-12 col-sm-4 card-content">
        <%= image_tag('recevoir.webp', class: "image-card") %>
      </div>
      <div class="col-xs-12 col-sm-4 card-content">
        <%= image_tag('partager.webp', class: "image-card") %>
      </div>
    </div>
  </div>
</div>
