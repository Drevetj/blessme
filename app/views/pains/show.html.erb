<div class="container-show">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  <ul class="list-unstyled">
    <% @pain %>
      <li><strong><%= @pain.title %></strong></li>
      <li>Category :<%= @pain.category %></li>
      <li>Request :<%= @pain.description %></li>
      <br>
      <%=link_to "Pray", new_pain_prayer_path(@pain) %>
      <br>
      <%=link_to "Back to request feed", pains_path %>
      <hr>
    </ul>
    <ul class="list-unstyled">
      <% @pain.prayers.each do |prayer| %>
        <li style="color:red"><strong><%= prayer.title %></strong></li>
        <li>Your prayer :<%= prayer.description %></li>

        <% if policy(prayer).edit? %>
          <%= link_to "Edit your prayer", edit_pain_prayer_path(@pain, prayer) %>
        <% end %>
        <br>
        <% if policy(prayer).destroy? %>
          <%= link_to "Delete your prayer", pain_prayer_path(@pain, prayer), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <hr>
      <% end %>

    </ul>
  </div>
</div>
</div>


