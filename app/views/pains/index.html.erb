<div class="cards-wrapper-category">
  <h3 class="title-category text-center">Choisissez la catégorie de prière qui vous inspire</h3>
  <div class="cards-container">
    <div class="row">
      <% Pain::CATEGORIES.each do |category| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <%= link_to pain_path(category) do %>
              <div class="card-content-category" style="background-image: url('<%= image_url "#{category.downcase}.jpg" %>');">
                <div class="box">
                  <span class="card-text"><strong> <%= category %></strong></span>
                </div>
              </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

