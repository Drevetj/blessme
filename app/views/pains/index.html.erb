<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  <ul class="list-unstyled">
    <% @pains.each do |pain| %>
      <li><strong>Title :</strong><%= pain.title %></li>
      <li><strong>Category :</strong><%= pain.category %></li>
      <li><strong>Description :</strong><%= pain.description %></li>
      <br>
      <%=link_to "Pray", new_pain_prayer_path(pain) %>
      <br>
      <%=link_to "Show", pain_path(pain) %>
      <br>
      <%=link_to "Edit the request", edit_pain_path(pain) %>

      <br>
      <hr>
    <% end %>
    </ul>
  </div>
</div>
</div>