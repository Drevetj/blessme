<div class="container-prayer hidden">
  <div class="container-prayer-form">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h3 class="text-center">Nouvelle pri√®re</h3>
        <%= simple_form_for [pain, prayer] do |f|  %>
          <%= f.input :title, label: "Titre" %>
          <%= f.input :description, as: :text, :input_html => {:rows => 10} %>
          <% if policy(prayer).create? %>
            <div class="submit-prayer-button">
              <%= f.submit 'Envoyer', class:"submit-prayer btn btn-medium" %>
            </div>
          <% end %>
        <% end %>
        <% if prayer.errors.any? %>
          <%= prayer.errors.full_messages %>
        <% end %>
      </div>
    </div>
  </div>
</div>

