<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offest-2">
      <%= simple_form_for @pain do |f|  %>
        <%= f.input :title %>
        <%= f.input :category %>
        <%= f.input :description, as: :text, :input_html => {:rows => 10}%>
        <%= f.submit 'Update' %>
      <% end %>
      <% if @pain.errors.any? %>
        <%= @pain.errors.full_messages %>
      <% end %>
    </div>
  </div>
</div>


